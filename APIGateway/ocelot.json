{
  "Routes": [
    // Reservation.API için yönlendirme kuralı
    {
      "UpstreamPathTemplate": "/r/{id}",
      "UpstreamHttpMethod": [ "GET" ],
      "DownstreamPathTemplate": "/api/Reservation/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7000 // Reservation.API projesinin HTTP portu
        }
      ]
    },
    // User.API için yönlendirme kuralı
    {
      "UpstreamPathTemplate": "/u/{id}",
      "UpstreamHttpMethod": [ "GET" ],
      "DownstreamPathTemplate": "/api/User/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 9000 // User.API projesinin HTTPS portu
        }
      ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:5025" // API Gateway projesinin HTTPS portu
  }
}